#include <iostream>

void swap(int &a, int &b) {
    int temp = a;
    a = b;
    b = temp;
}

void merge(int* p, int* q) {
    for (int *j = p; j < p+5; j++) {
       if (*j > *(j+1)) {
           swap(*j, *(j+1));
       }
    for (int* j = q; j < q + 5; j++)
        if (*j > *(j + 1)) {
            swap(*j, *(j + 1));
        }
    }
}

int main() {
    int arr[10] = { 9, 1, 8, 2, 7, 3, 6, 4, 5, 0 };

    std::cout << "Array original: ";
    for (int i = 0; i < 10; ++i) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    merge(arr, arr + 5);

    std::cout << "Array ordenado parcialmente: ";
    for (int i = 0; i < 10; ++i) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}

