#include <iostream>

void swap(int& a, int& b) {
    int temp = a;
    a = b;
    b = temp;
}

void split(int* start, int* middle, int* end) {
    int* i = start;
    int* j = middle;

    while (i < middle && j < end) {
        while (i < middle && *i % 2 == 0) i++;
        while (j < end && *j % 2 == 1) j++;

        if (i < middle && j < end) {
            swap(*i, *j);
        }
    }
}
int main() {
    int arr[10] = { 9, 1, 8, 2, 7, 3, 6, 4, 5, 0 };
    int* start = arr;
    int* middle = arr + 5;
    int* end = arr + 10;

    std::cout << "Array original: ";
    for (int* p = start; p < end; ++p) {
        std::cout << *p << " ";
    }
    std::cout << std::endl;

    split(start, middle, end);

    std::cout << "Array despuÃ©s de split: ";
    for (int* p = start; p < end; ++p) {
        std::cout << *p << " ";
    }
    std::cout << std::endl;

    merge(start, middle, end);

    std::cout << "Array ordenado: ";
    for (int* p = start; p < end; ++p) {
        std::cout << *p << " ";
    }
    std::cout << std::endl;

    return 0;
}
